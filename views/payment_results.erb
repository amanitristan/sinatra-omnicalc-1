<h1>Payment Results</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @rate.to_fs(:percentage, { :precision => 4 }) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years.to_i %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @prin.to_fs(:currency, { :precision => 2}) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @payment.to_fs(:currency, { :precision => 2}) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
